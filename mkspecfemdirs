#/bin/bash



specfem="/gpfs/alpine/geo111/scratch/lsawade/SpecfemMagic/specfem3d_globe"

for i in 1 2
do
    tdir="/gpfs/alpine/geo111/scratch/lsawade/entk_test/specfem_run_${i}"
    # Change to your specfem run directory
    rm -rf ${tdir}
    mkdir ${tdir}
    cd ${tdir}

    # Create data structure in place
    ln -s ${specfem}/bin .
    ln -s ${specfem}/DATABASES_MPI .
    cp -r ${specfem}/OUTPUT_FILES .
    mkdir DATA
    cp ${specfem}/DATA/CMTSOLUTION ./DATA/
    cp ${specfem}/DATA/STATIONS ./DATA/
    cp ${specfem}/DATA/Par_file ./DATA/
done